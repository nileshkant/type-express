{
  "version": "1.0.0",
  "engines": {
    "node": ">=14.16",
    "npm": ">=6.14.11"
  },
  "author": "Nilesh Kant",
  "license": "MIT",
  "name": "type-express",
  "description": "REST API boilerplate builded with Express.js, Typescript, TypeORM and Postgres",
  "keywords": [
    "nodejs",
    "express.js",
    "typescript",
    "typeorm",
    "boilerplate",
    "api",
    "rest",
    "restful",
    "es2017",
    "postgres",
    "mysql"
  ],
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.10",
    "@types/helmet": "^4.0.0",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/node": "^8.0.29",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "chai": "^4.3.4",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "mocha": "^9.0.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.1",
    "cloudinary": "^1.26.3",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.15.4",
    "express-validator": "^6.12.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql": "^2.14.1",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "sql.js": "^1.5.0",
    "streamifier": "^0.1.1",
    "ts-node": "^10.0.0",
    "typeorm": "0.2.34",
    "typescript": "^4.3.3"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build:start": "NODE_ENV=development npx ts-node build/src/index.js",
    "build": "npx tsc --project ./",
    "dev:win": "set NODE_ENV=development && nodemon",
    "dev": "NODE_ENV=development nodemon start",
    "test": "set NODE_ENV=test && mocha --watch --require ts-node/register",
    "typeormwin": "node --require ts-node/register node_modules\\typeorm\\cli.js",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "seed:generate:win": "npm run typeormwin migration:generate -- -n 'initial' -c development",
    "seed:run:win": "npm run typeormwin migration:run -- -c development",
    "seed:generate": "npm run typeorm migration:generate -- -n 'initial' -c development",
    "seed:run": "npm run typeorm migration:run -- -c development",
    "docker:build": "docker build -t type-express .",
    "docker:start": "docker-compose up -d"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
